<FotoPerfilPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/b2g11.jpg"
        Label:
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Selecione sua Foto de Perfil"
        ScrollView:
            pos_hint:
            size_hint:
            GridLayout:
                id:lista_fotos_perfil
                # Scroll vertical                   # --- Scroll Horizontal ---
                size_hint_y: None                   # ---> size_hint_x
                height: self.minimum_height          # ---> width: self.minimum_width
                row_default_height: "90dp"          # ---> column_default_width: "90dp"
                row_force_default: True             # ---> column_force_default: True
                spacing: 5, 5



        # Botao Voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#1BAF57")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")
