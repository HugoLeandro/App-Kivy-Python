<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.jpg"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino1.png"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            text: "Total de Vendas: R$ 200,00"
            id: id_total_vendas
            markup: True

        # Lista de Vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75 }
            size_hint: 1, 0.63

        # 3 Bot√µes da Homepage
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FF7C06")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/add.png"
                on_release: on_release: app.mudar_tela("adicionarvendaspage")
            ImageButton:
                source: "icones/salesman.png"
                on_release: on_release: app.mudar_tela("listarvendedorespage")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustespage")