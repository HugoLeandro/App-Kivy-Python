<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.jpg"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino1.png"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            text: "Total de Vendas: R$ 200,00"
            id: id_total_vendas
            markup: True

        # Lista de Vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75 }
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas

                # Scroll vertical                   # --- Scroll Horizontal ---
                size_hint_y: None                   # ---> size_hint_x
                height: self.minimum_height          # ---> width: self.minimum_width
                row_default_height: "90dp"          # ---> column_default_width: "90dp"
                row_force_default: True             # ---> column_force_default: True

        # 3 Bot√µes da Homepage
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#DA9302")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/add.png"
                on_release: on_release: app.mudar_tela("adicionarvendaspage")
            ImageButton:
                source: "icones/salesman.png"
                on_release: on_release: app.mudar_tela("listarvendedorespage")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustespage")