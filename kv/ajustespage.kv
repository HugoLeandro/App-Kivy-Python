<AjustesPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.jpg"
        Label:

            pos_hint:{"right": 0.85,"top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Seu ID Ãšnico: 1"
            id: id_vendedor

        # Mudar Foto de Perfil
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.7}
            size_hint: 0.5, 0.15
            source: "icones/foto_perfil.png"
            on_release: print("Ir para Tela Mudar Foto Perfil")
        LabelButton:
            text: "Mudar Foto de Perfil"
            on_release: print("Ir para Tela Mudar Foto Perfil")
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.5, 0.15

        # Adicionar Vendedor
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.5}
            size_hint: 0.5, 0.15
            source: "icones/adicionar_vendedor.png"
            on_release: print("Adicionar Vendedor")
        LabelButton:
            text: "Adicionar Vendedor"
            on_release: print("Adicionar Vendedor")
            pos_hint: {"right": 0.9, "top": 0.5}
            size_hint: 0.5, 0.15
       #Ver Todas as Vendas
        ImageButton:
            pos_hint: {"right": 0.5, "top": 0.3}
            size_hint: 0.5, 0.15
            source: "icones/vendas_empresa.png"
            on_release: print("Adicionar Vendedor")
        LabelButton:
            text: "Ver todas as Vendas"
            on_release: print("Ver todas as Vendas")
            pos_hint: {"right": 0.9, "top": 0.3}
            size_hint: 0.5, 0.15

        # Botao Voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FD9029")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")